@model Rhendaria.Web.Models.GameZoneViewModel

@{
    ViewData["Title"] = "Game View";
}

<div class="center" id="game-field"></div>

@section Scripts
{
    <environment include="Development">
        <script src="~/lib/pixi.js"></script>
        <script src="~/lib/signalr.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/pixi.min.js"></script>
        <script src="~/lib/signalr.min.js"></script>
    </environment>
    
    <script src="~/js/game.js" asp-append-version="true"></script>
    <script src="~/js/communication.js" asp-append-version="true"></script>
    <script src="~/js/rendering.js" asp-append-version="true"></script>
}
